#welcome {
	background-image: url("flag.png");
	background-size: 100% 500px;
	background-origin: border-box;
	background-attachment: fixed;
	width: 100%;
	height: 500px;
}

nav {
	background-color: maroon;
	color: white;
	float: left;
	width: 100%;
	display: flex;
	flex-flow: row nowrap;
	padding: 15px;
	justify-content: space-around;
	font-size: 20px;
}

.links {
	text-decoration: none;
	color: white;
}

.links:hover {
	text-decoration: underline;
	font-size: 1.1em;
}

.wrap {
	float: left;
	display: flex;
}

aside {
	background-color: maroon;
	padding: 50px;
	color: white;
}

aside ul {
	list-style: none;
	padding: 0px;
}

.submenuTitle {
	font-size: 20px;
}

section {
	padding: 5px;
}